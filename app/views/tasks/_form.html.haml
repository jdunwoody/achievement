= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        ="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"

      %ul
        -@task.errors.full_messages.each do |msg|
          %li
            =msg

  .field
    =f.label :name
    =f.text_field :name

  .field
    =f.label :url
    =f.text_field :url

  .field
    = f.label :description
    = f.text_area :description

  =hidden_field(:task, :status)
  =hidden_field(:task, :level_id)

  .actions
    =f.submit
