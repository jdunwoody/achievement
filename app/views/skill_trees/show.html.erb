<p id="notice"><%= notice %></p>

<h1><%= @skill_tree.name %></h1>
<p>
  <b>Levels:</b>
  <ul>
    <li>[<%= link_to 'Add level', new_skill_tree_level_path(@skill_tree) %>]</li>

    <% @skill_tree.levels.each do |level| %>
      <li><%= link_to level.name, level_path(level) %>
        <span class="delete_button">
          <%= button_to "Delete",
            { :action => "destroy", :id => level.id, :controller => :levels },
            { :confirm => "Are you sure?", :method => :delete }
          %>
        </span>
      </li>
    <% end %>
  </ul>
</p>
<p>
  <%= link_to 'Edit',edit_skill_tree_path(@skill_tree) %> |
  <%= link_to 'All', skill_trees_path %>
</p>

